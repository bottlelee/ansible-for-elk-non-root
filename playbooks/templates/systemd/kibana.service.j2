[Unit]
Description=Kibana
After=network.target

[Service]
User={{ elk_user }}
Group={{ elk_user }}
ExecStart={{ elk_install_dir }}/kibana/bin/kibana
ExecReload="{{ elk_install_dir }}/kibana/bin/kibana --config.reload"
ExecStop="{{ elk_install_dir }}/kibana/bin/kibana --config.shutdown"
WorkingDirectory={{ elk_install_dir }}/kibana

Restart=always
RestartSec=5
StartLimitIntervalSec=60
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
